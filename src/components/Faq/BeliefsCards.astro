---
/**
 * * FAQ section columns (not accordions)
 */

import { getLocaleFromUrl } from "@js/localeUtils";
import { getTranslatedData } from "@js/translationUtils";

import FaqCard from "./FaqCard.astro";
const currLocale = getLocaleFromUrl(Astro.url);
const beliefsData = getTranslatedData("beliefsData", currLocale);
---

<section id="faq-cards" class="site-container py-24 md:py-28">
	<div class="mx-auto flex max-w-xl flex-col items-center">
		<h2 class="h2 text-center">What We Believe</h2>
	</div>

	<div class="mx-auto mt-20 grid w-full gap-x-10 gap-y-3 lg:grid-cols-1 xl:gap-x-24">
		{
			beliefsData.map((faq) => (
				<div class="flex w-full flex-col gap-10">
					<FaqCard question={faq.question} answer={faq.answer} />
				</div>
			))
		}
	</div>
</section>
