---
import { getLocaleFromUrl } from "@js/localeUtils";
import { humanize } from "@js/textUtils";

interface Props {
	category: string;
}

const { category } = Astro.props as Props;

const currLocale = getLocaleFromUrl(Astro.url);
---

<a
	class="text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 inline-block text-sm leading-5 font-semibold transition-colors md:text-base"
	href={`/categories/${category}`}
>
	{humanize(category)}
</a>
