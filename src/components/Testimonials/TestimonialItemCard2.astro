---
import { type TestimonialItem } from "@config/types/configDataTypes";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

interface Props extends TestimonialItem {
	rest?: any;
	class?: string; // any additional classes
}

const { class: className, avatar, name, title, testimonial, ...rest } = Astro.props as Props;
---

<div
	class="border-base-200 bg-base-50 hover:border-base-300 dark:border-base-800 dark:bg-base-900 dark:text-base-100 dark:hover:border-base-700 flex h-full flex-col rounded-xl border p-3 transition-colors md:p-4"
	class:list={className}
	{...rest}
>
	<div class="flex items-center gap-4">
		<Image src={avatar} alt={name} height={100} class="size-14 rounded-full object-cover" />
		<div>
			<p class="font-semibold">{name}</p>
			<p class="description text-sm">{title}</p>
		</div>
	</div>
	<p class="mt-6 text-sm md:text-base">"{testimonial}"</p>
</div>
