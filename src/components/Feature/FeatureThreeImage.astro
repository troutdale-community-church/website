---
/**
 * * Feature section with 3 main images, each with title and text above them
 */

import { Image } from "astro:assets";

interface FeatureData {
	title: string;
	text: string;
	image: ImageMetadata;
}

import image1 from "@images/device.jpg";
import image3 from "@images/stock.jpg";
import image2 from "@images/woman4.jpg";

const featureData: FeatureData[] = [
	{
		title: "Real-time insights",
		text: `Data syncs across your team instantly. Real-time access, with 99.9% uptime.`,
		image: image1,
	},
	{
		title: "Connect all our contacts",
		text: `Sync with your calendar apps and contacts. Google, Outlook, ProtonMail, and more.`,
		image: image2,
	},
	{
		title: "Dashboards for all businesses",
		text: `Lorem ipsum dolor sit amet consectetur adipisicing elit. Fugit totam delectus
            rerum.`,
		image: image3,
	},
];
---

<section
	id="feature-three-image"
	class="bg-base-950 dark:bg-base-900 overflow-hidden py-16 md:py-24"
>
	<div class="site-container">
		<h2 class="h2 text-base-100 mb-12 lg:mb-24">How to streamline your workflow</h2>
		<div class="-m-5 flex flex-wrap" id="trigger-three-img">
			{
				featureData.map((feature, idx) => (
					<div
						class="w-full p-5 md:w-1/3"
						data-aos="fade-up"
						data-aos-delay={0.2 * idx}
						data-aos-trigger="#trigger-three-img"
					>
						<h3 class="text-base-100 mb-4 text-xl font-semibold tracking-tight">{feature.title}</h3>
						<p class="text-base-400 dark:text-base-300 mb-12 text-xl tracking-tight">
							{feature.text}
						</p>
						<Image
							src={feature.image}
							alt="image"
							loading="lazy"
							width={600}
							class="w-full transform rounded-lg transition duration-500 hover:translate-y-3"
							aria-hidden="true"
						/>
					</div>
				))
			}
		</div>
	</div>
</section>
