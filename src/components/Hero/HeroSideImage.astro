<section id="hero-side" class="bg-base-800 dark:bg-base-950 mt-[4.5rem] overflow-clip">
	<!-- "dark" class forces dark mode for this section -->
	<div class="site-container dark mx-auto px-4 pt-10 pb-20 md:py-28">
		<div class="-mx-4 flex max-w-7xl flex-wrap xl:items-center">
			<div class="mb-16 w-full px-4 md:w-1/2 lg:pr-10">
				<div
					class="relative mx-auto max-w-lg md:mr-0"
					data-aos="fade-right"
					data-aos-trigger="#hero-side"
				>
					<div
						class="relative overflow-hidden transition-transform duration-500 hover:-translate-y-2"
					>
						<Image
							src={heroImage}
							class="h-auto min-w-full object-cover"
							alt="hero software"
							loading="eager"
							width={550}
							densities={[1.5, 2]}
						/>
					</div>
				</div>
			</div>

			<div class="w-full px-4 md:mt-20 md:mb-auto md:w-1/2 lg:pl-10">
				<div data-aos="fade-left" data-aos-trigger="#hero-side">
					<h1
						class="text-base-900 dark:text-base-100 mb-6 font-serif text-4xl tracking-tighter text-pretty md:text-6xl"
					>
						Hero text
					</h1>
				</div>
				<p
					class="description mb-8 text-pretty lg:text-lg"
					data-aos="fade-left"
					data-aos-delay=".1"
					data-aos-trigger="#hero-side"
				>
					Hero description
				</p>
				<div
					class="mt-6 flex flex-wrap gap-4"
					data-aos="fade-left"
					data-aos-delay=".2"
					data-aos-trigger="#hero-side"
				>
					<Button variant="primary" href={"/signup"}>
						Try 14 Days Free Trial
					</Button>
					<Button
						variant="outline"
						href="https://cosmicthemes.com/themes/nova/"
						target="_blank"
						rel="noopener noreferrer"
					>
						Get Nova
					</Button>
				</div>

				<p
					class="text-base-300/60 mt-8 text-sm"
					data-aos="fade-left"
					data-aos-delay=".3"
					data-aos-trigger="#hero-side"
				>
					No Credit Card Required / Cancel Anytime
